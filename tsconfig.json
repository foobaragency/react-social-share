{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["ES5", "ES2015", "ES2016", "DOM", "ESNext"],
        "types": ["node", "jest"],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist/esm",
        "sourceMap": true,
        "strict": true,
        "target": "es6"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["tests", "dist", "node_modules"]
}
